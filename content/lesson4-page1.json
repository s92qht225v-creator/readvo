        {
          "id": "l4p1-t1-s2",
          "section": "text",
          "text_original": "她很忙。",
          "text_translation": "U juda band.",
          "text_translation_ru": "Она очень занята.",
          "pinyin": "Tā hěn máng.",
          "speaker": "王一雪",
